<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.josias.httpclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".connection.volley.ApplicationController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AsyncTaskActivity"
            android:label="@string/title_activity_async_task" >
        </activity>
        <activity
            android:name=".VolleyActivity"
            android:label="@string/title_activity_volley" >
        </activity>
        <activity
            android:name=".VolleyImageLoaderActivity"
            android:label="@string/title_activity_volley_image_loader" >
        </activity>
    </application>

</manifest>
