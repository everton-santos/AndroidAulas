<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.josias.storage" >

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sqlite.SQLiteActivity"
            android:label="@string/title_activity_sqlite" >
        </activity>
        <activity
            android:name=".sugar.CadastrarActivity"
            android:label="@string/title_activity_cadastrar" >
        </activity>
        <activity
            android:name=".sugar.AtualizarActivity"
            android:label="@string/title_activity_atualizar" >
        </activity>
        <activity
            android:name=".sugar.ApagarActivity"
            android:label="@string/title_activity_apagar" >
        </activity>
        <activity
            android:name=".sugar.BuscarActivity"
            android:label="@string/title_activity_buscar" >
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="storage.db" />
        <meta-data
            android:name="VERSION"
            android:value="4" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.android.josias.storage.sugar.models" />

        <activity
            android:name=".sugar.SugarActivity"
            android:label="@string/title_activity_sugar" >
        </activity>
        <activity
            android:name=".spreferences.SharedPreferencesActivity"
            android:label="@string/title_activity_shared_preferences" >
        </activity>
    </application>

</manifest>
